generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  // Local Login
  id               String     @id @default(uuid())
  email            String     @unique
  username         String     @unique
  password         String?

  // Social Login
  googleId         String?    @unique
  facebookId       String?    @unique

  sentContacts     Contact[]  @relation("UserInitiated")
  receivedContacts Contact[]  @relation("UserReceived")

  // Chat
  conversations Conversation[] @relation("ConversationParticipants")
  sentMessages  Message[]      @relation("UserSentMessages")
}

model Contact {
  // User follows buddy, but buddy doesn't need to follow user
  id               String   @id @default(uuid())
  userId           String   
  buddyId          String   

  // Foreign Keys
  user             User     @relation("UserInitiated", fields: [userId], references: [id])
  buddy            User     @relation("UserReceived", fields: [buddyId], references: [id])

  // Unique
  @@unique([userId, buddyId]) 
}

model Conversation {
  id        String    @id @default(uuid())
  isGroup   Boolean   @default(false)
  name      String?   //Group chat name

  // Who participates and the messages
  participants User[] @relation("ConversationParticipants")
  messages     Message[]
}

model Message {
  id             String       @id @default(uuid())
  content        String
  createdAt      DateTime     @default(now())
  
  senderId       String
  sender         User         @relation("UserSentMessages", fields: [senderId], references: [id])
  
  // Which conversation belongs
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id])
}
